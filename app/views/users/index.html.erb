<p id="notice"><%= notice %></p>
<br><br>
<h1 id="title">Users</h1><br>

<table class="table-fill">
  <thead>
    <tr>
      <th class="text-left">Name</th>
      <th class="text-left">Email</th>
      <th class="text-left">Favorite Team</th>
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @users.each do |user| %>
      <tr>
        <td class="text-left"><%= user.name %></td>
        <td class="text-left"><%= user.email %></td>
        <td class="text-left"><%= user.favteam %></td>
        <td class="text-left"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="text-left"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
