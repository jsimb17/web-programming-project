<p id="notice"><%= notice %></p>
<br><br>
<h1>Schedule</h1>
<br>
<%= link_to 'Add New Game to Schedule', 'https://models-workspace-jsimbartl.c9users.io/schedules/new', class: "btn btn-lg btn-primary", id: "buttonText" %>
<br><br>
<div id="searchBar">
            <%= form_tag(controller: "schedules", action: "display", :method => "post", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: " Search for Team" %>  <%= submit_tag "Search" %>
            <% end %>
          </div>
<table class="table-fill">
  <thead>
    <tr>
      <th class="text-left">Home Team</th>
      <th class="text-left">Away Team</th>
      <th class="text-left">Location</th>
      <th class="text-left">Date</th>
      <th class="text-left">Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @schedules.each do |schedule| %>
      <tr>
        <td class="text-left"><%= schedule.team1 %></td>
        <td class="text-left"><%= schedule.team2 %></td>
        <td class="text-left"><%= schedule.location %></td>
        <td class="text-left"><%= schedule.date.strftime("%m/%d/%Y") %></td>
        <td class="text-left"><%= schedule.time.strftime("%I:%M %p") %></td>
        <td class="text-left"><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td class="text-left"><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
